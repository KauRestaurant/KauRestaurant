@page
@model RegisterModel

@{
    ViewData["Title"] = "تسجيل كمستخدم جديد";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-success">
                    <h3 class="mb-0">تسجيل كمستخدم جديد</h3>
                </div>
                <div class="card-body">
                    <form id="register-form" method="post">
                        <h5 class="mb-4">قم بإنشاء حساب جديد باستخدام بريدك الإلكتروني وكلمة المرور.</h5>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="الاسم الأول" />
                                    <label asp-for="Input.FirstName">الاسم الأول</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="اسم العائلة" />
                                    <label asp-for="Input.LastName">اسم العائلة</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control text-start" autocomplete="username" aria-required="true" placeholder="name@example.com" dir="ltr" />
                            <label asp-for="Input.Email">البريد الإلكتروني</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="كلمة المرور" />
                            <label asp-for="Input.Password">كلمة المرور</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="تأكيد كلمة المرور" />
                            <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button id="register-submit" type="submit" class="btn btn-success btn-lg">إنشاء حساب</button>
                        </div>

                        <div class="mt-4 text-center">
                            <p>
                                <a asp-page="./Login">لديك حساب بالفعل؟ تسجيل الدخول</a>
                            </p>
                            <p>
                                <a asp-page="./ResendEmailConfirmation">إعادة إرسال تأكيد البريد الإلكتروني</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- External Registration Section (Optional) -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-success">
                    <h4 class="mb-0">تسجيل باستخدام خدمة أخرى</h4>
                </div>
                <div class="card-body">
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-warning" role="alert">
                            لا توجد خدمات مصادقة خارجية مكونة. راجع هذا <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="alert-link">المقال</a> حول إعداد هذا التطبيق ASP.NET لدعم تسجيل الدخول عبر الخدمات الخارجية.
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-info text-white" name="provider" value="@provider.Name" title="تسجيل الدخول باستخدام حساب @provider.DisplayName">
                                    <i class="bi bi-@provider.Name me-2"></i> @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}