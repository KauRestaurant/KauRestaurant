@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "إعادة تعيين كلمة المرور";
}

<div>
    <!-- Main Content Section -->
    <div class="container-fluid py-4 bg-light">
        <div class="container max-w-600">
            <div class="card border-0 shadow">
                <div class="card-header bg-white py-3">
                    <h3 class="fw-bold mb-0">إعادة تعيين كلمة المرور</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                   aria-required="true" placeholder="name@example.com" dir="ltr"
                                   data-val-required="البريد الإلكتروني مطلوب"
                                   data-val-email="البريد الإلكتروني غير صالح" />
                            <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">إعادة التعيين</button>
                        </div>
                        <div class="mt-4 text-center">
                            <p class="mb-1">
                                <a asp-page="./Login" class="text-dark text-decoration-none hover-success">العودة إلى تسجيل الدخول</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
