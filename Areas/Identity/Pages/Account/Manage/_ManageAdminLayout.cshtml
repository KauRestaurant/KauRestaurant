@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="container">
        <div class="border-bottom pb-2 mb-3">
            <h3 class="fw-bold mb-0">إدارة الحساب</h3>
            <p class="mb-0">تحكم في إعدادات حسابك وبياناتك الشخصية</p>
        </div>
    </div>
    <div class="container py-4">
        <div class="row g-4">
            <div class="col-lg-3">
                <div class="card border-0 shadow">
                    <div class="card-header text-white bg-dark">
                        <h5 class="mb-0">القائمة</h5>
                    </div>
                    <div>
                        @await Html.PartialAsync("_ManageNav")
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
