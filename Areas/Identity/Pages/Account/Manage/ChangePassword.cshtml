@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="text-center mb-4">
    <h4 class="mb-3">@ViewData["Title"]</h4>
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<div class="row justify-content-center">
    <div class="col-12">
        <form id="change-password-form" method="post" class="needs-validation" novalidate>
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="ModelOnly" role="alert" class="alert alert-danger alert-dismissible fade show">
                    <h6 class="alert-heading d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        حدث خطأ
                    </h6>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="كلمة المرور الحالية" dir="ltr" />
                <label asp-for="Input.OldPassword">كلمة المرور الحالية</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="كلمة المرور الجديدة" dir="ltr" />
                <label asp-for="Input.NewPassword">كلمة المرور الجديدة</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="تأكيد كلمة المرور الجديدة" dir="ltr" />
                <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور الجديدة</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-lg me-2"></i>تحديث كلمة المرور
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
