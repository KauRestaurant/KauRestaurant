@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "حذف البيانات الشخصية";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="text-center mb-4">
    <h4 class="mb-3">@ViewData["Title"]</h4>
</div>

<div class="alert alert-danger">
    <div class="d-flex">
        <div class="me-3">
            <i class="bi bi-exclamation-triangle-fill fs-3"></i>
        </div>
        <div>
            <h5 class="alert-heading">تحذير خطير</h5>
            <p class="mb-0">
                <strong>سيؤدي حذف هذه البيانات إلى إزالة حسابك بشكل دائم، ولا يمكن التراجع عن هذا الإجراء.</strong>
            </p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                           aria-required="true" placeholder="كلمة المرور" dir="ltr" />
                    <label asp-for="Input.Password">كلمة المرور للتأكيد</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <div class="d-grid">
                <button class="btn btn-danger btn-lg" type="submit">
                    <i class="bi bi-trash-fill me-2"></i>حذف الحساب نهائياً
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
