@page
@model IndexModel
@{
    ViewData["Title"] = "المعلومات الشخصية";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="text-center mb-4">
    <h4 class="mb-3">@ViewData["Title"]</h4>
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <div class="row g-3">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="الاسم الأول" />
                <label asp-for="Input.FirstName">الاسم الأول</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="اسم العائلة" />
                <label asp-for="Input.LastName">اسم العائلة</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="d-grid">
        <button id="update-profile-button" type="submit" class="btn btn-success btn-lg">
            <i class="bi bi-check-lg me-2"></i>حفظ التغييرات
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
