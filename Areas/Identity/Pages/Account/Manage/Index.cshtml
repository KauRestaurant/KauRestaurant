@page
@model KauRestaurant.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "المعلومات الشخصية";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="text-center mb-4">
    <h4 class="mb-3">@ViewData["Title"]</h4>
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="row g-3">
        <!-- First Name -->
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="الاسم الأول" />
                <label asp-for="Input.FirstName">الاسم الأول</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>

        <!-- Last Name -->
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="اسم العائلة" />
                <label asp-for="Input.LastName">اسم العائلة</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>

        <!-- Phone (admins only) -->
        @if (User.IsInRole("A1") || User.IsInRole("A2") || User.IsInRole("A3"))
        {
            <div class="col-12">
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="رقم الجوال" />
                    <label asp-for="Input.PhoneNumber">رقم الجوال</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        }
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-lg me-2"></i>حفظ التغييرات
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
