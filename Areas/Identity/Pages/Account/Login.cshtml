@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-success">
                    <h3 class="mb-0">تسجيل الدخول</h3>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <h5 class="mb-4">استخدم حسابًا محليًا لتسجيل الدخول.</h5>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">البريد الإلكتروني</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">كلمة المرور</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">تذكرني</label>
                        </div>
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-success btn-lg">تسجيل الدخول</button>
                        </div>
                        <div class="mt-4 text-center">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">هل نسيت كلمة المرور؟</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل كمستخدم جديد</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">إعادة إرسال تأكيد البريد الإلكتروني</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- External Login Section -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-success">
                    <h4 class="mb-0">تسجيل الدخول باستخدام خدمة أخرى</h4>
                </div>
                <div class="card-body">
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-warning" role="alert">
                            لا توجد خدمات مصادقة خارجية مكونة. راجع هذا <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="alert-link">المقال</a> حول إعداد هذا التطبيق ASP.NET لدعم تسجيل الدخول عبر الخدمات الخارجية.
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-info text-white" name="provider" value="@provider.Name" title="تسجيل الدخول باستخدام حساب @provider.DisplayName">
                                    <i class="bi bi-@provider.Name me-2"></i> @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
