@{
    ViewData["Title"] = "شراء التذاكر";
}

<div>
    <!-- Main Content Section -->
    <div class="container-fluid py-4 py-lg-5 bg-white">
        <div class="container">
            <div class="card border-0 shadow">

                <!-- Card Header -->
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="fw-bold mb-0">شراء التذاكر</h3>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card border-0 shadow">
                    <div class="card-body p-3">
                        <!-- Ticket Input Sections -->
                        <div class="row justify-content-center">
                            <div class="col-12" id="ticketSection"></div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <h5 class="fw-bold mb-0">المبلغ الإجمالي</h5>
                            <h3 class="mb-0 text-success" id="grandTotal">0 ريال</h3>
                        </div>

                        <!-- Purchase Button -->
                        <button type="button" class="btn btn-success btn-lg w-100 mt-3" onclick="purchaseTickets()">
                            شراء
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function createTicketCard(name, price, icon, id) {
        return `
            <div class="p-4 text-center">
                <h5 class="border-bottom pb-2 mb-3">
                    <i class="bi ${icon} me-2"></i> ${name} <span class="fw-bold text-success">(${price} ريال)</span>
                </h5>
                <div class="d-flex align-items-center justify-content-center gap-3">
                    <button type="button" class="btn btn-outline-success fw-bold px-3" onclick="adjustQuantity('${id}', -1)">-</button>
                    <input type="text" class="form-control text-center" style="width: 90px;" min="0" value="0" id="${id}">
                    <button type="button" class="btn btn-outline-success fw-bold px-3" onclick="adjustQuantity('${id}', 1)">+</button>
                </div>
            </div>
        `;
    }

    function renderTickets() {
        const ticketSection = document.getElementById('ticketSection');
        ticketSection.innerHTML =
            createTicketCard('الإفطار', 7, 'bi-sun', 'breakfastQty') +
            createTicketCard('الغداء', 10, 'bi-brightness-high', 'lunchQty') +
            createTicketCard('العشاء', 10, 'bi-moon', 'dinnerQty');
    }

    function adjustQuantity(id, change) {
        const input = document.getElementById(id);
        input.value = Math.max(0, parseInt(input.value || 0) + change);
        calculateTotals();
    }

    function calculateTotals() {
        const breakfast = parseInt(document.getElementById('breakfastQty').value) * 7;
        const lunch = parseInt(document.getElementById('lunchQty').value) * 10;
        const dinner = parseInt(document.getElementById('dinnerQty').value) * 10;
        document.getElementById('grandTotal').textContent = `${breakfast + lunch + dinner} ريال`;
    }

    function purchaseTickets() {
        alert('تم شراء التذاكر!');
    }

    // Initialize
    renderTickets();
    calculateTotals();
</script>