<div class="container py-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="h3 mb-2">Purchase Meal Tickets</h1>
        <p class="text-muted mb-0">Select your tickets quantity</p>
    </div>

    <!-- Meal Times Info -->
    <div class="alert alert-light border shadow-sm mb-4 py-3">
        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center align-items-center text-center">
            <div><i class="bi bi-sun text-success"></i> 7:00-10:30</div>
            <div class="d-none d-sm-block">|</div>
            <div><i class="bi bi-brightness-high text-info"></i> 11:30-2:30</div>
            <div class="d-none d-sm-block">|</div>
            <div><i class="bi bi-moon text-primary"></i> 5:30-8:30</div>
        </div>
    </div>

    <!-- Ticket Selection Form -->
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form id="ticketPurchaseForm">
                <!-- Breakfast Tickets -->
                <div class="mb-4">
                    <div class="card border-success mb-3">
                        <div class="card-header bg-success text-white py-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-sun fs-4 me-2"></i>
                                <h5 class="mb-0">Breakfast Tickets</h5>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <div class="text-center mb-3">
                                <span class="h4 text-success">7 SR</span>
                                <span class="text-muted">/ticket</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('breakfastQty', -1)">-</button>
                                <input type="number" class="form-control form-control-lg text-center" style="max-width: 120px" min="0" value="0" id="breakfastQty">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('breakfastQty', 1)">+</button>
                            </div>
                            <div class="text-center mt-3">
                                <span class="text-muted">Total: </span>
                                <span class="h5 mb-0" id="breakfastTotal">0 SR</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lunch Tickets -->
                <div class="mb-4">
                    <div class="card border-info mb-3">
                        <div class="card-header bg-info text-white py-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-brightness-high fs-4 me-2"></i>
                                <h5 class="mb-0">Lunch Tickets</h5>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <div class="text-center mb-3">
                                <span class="h4 text-info">10 SR</span>
                                <span class="text-muted">/ticket</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <button type="button" class="btn btn-outline-info btn-lg fw-bold" onclick="adjustQuantity('lunchQty', -1)">-</button>
                                <input type="number" class="form-control form-control-lg text-center" style="max-width: 120px" min="0" value="0" id="lunchQty">
                                <button type="button" class="btn btn-outline-info btn-lg fw-bold" onclick="adjustQuantity('lunchQty', 1)">+</button>
                            </div>
                            <div class="text-center mt-3">
                                <span class="text-muted">Total: </span>
                                <span class="h5 mb-0" id="lunchTotal">0 SR</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dinner Tickets -->
                <div class="mb-4">
                    <div class="card border-primary mb-3">
                        <div class="card-header bg-primary text-white py-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-moon fs-4 me-2"></i>
                                <h5 class="mb-0">Dinner Tickets</h5>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <div class="text-center mb-3">
                                <span class="h4 text-primary">10 SR</span>
                                <span class="text-muted">/ticket</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <button type="button" class="btn btn-outline-primary btn-lg fw-bold" onclick="adjustQuantity('dinnerQty', -1)">-</button>
                                <input type="number" class="form-control form-control-lg text-center" style="max-width: 120px" min="0" value="0" id="dinnerQty">
                                <button type="button" class="btn btn-outline-primary btn-lg fw-bold" onclick="adjustQuantity('dinnerQty', 1)">+</button>
                            </div>
                            <div class="text-center mt-3">
                                <span class="text-muted">Total: </span>
                                <span class="h5 mb-0" id="dinnerTotal">0 SR</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="card bg-light">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">Total Amount</h5>
                            <h3 class="mb-0" id="grandTotal">0 SR</h3>
                        </div>

                        <!-- Pay Button -->
                        <button type="button" class="btn btn-primary btn-lg w-100 py-3" id="paypal-button">Purchase</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function adjustQuantity(inputId, change) {
        const input = document.getElementById(inputId);
        const newValue = Math.max(0, parseInt(input.value) + change);
        input.value = newValue;
        calculateTotals();
    }

    function calculateTotals() {
        const breakfast = document.getElementById('breakfastQty').value * 7;
        const lunch = document.getElementById('lunchQty').value * 10;
        const dinner = document.getElementById('dinnerQty').value * 10;

        document.getElementById('breakfastTotal').textContent = `${breakfast} SR`;
        document.getElementById('lunchTotal').textContent = `${lunch} SR`;
        document.getElementById('dinnerTotal').textContent = `${dinner} SR`;
        document.getElementById('grandTotal').textContent = `${breakfast + lunch + dinner} SR`;
    }

    // Initialize calculations
    calculateTotals();
</script>
