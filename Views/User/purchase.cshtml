@{
    ViewData["Title"] = "شراء التذاكر";
}

<div class="bg-success text-white py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">شراء تذاكر الوجبات</h1>
                <p class="lead mb-0">اختر كمية التذاكر الخاصة بك</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <!-- Meal Times Info -->
    <div class="alert alert-light border shadow-sm mb-4 py-3">
        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center align-items-center text-center">
            <div><i class="bi bi-sun text-dark me-1"></i> 7:00-10:30</div>
            <div class="d-none d-sm-block">|</div>
            <div><i class="bi bi-brightness-high text-dark me-1"></i> 11:30-2:30</div>
            <div class="d-none d-sm-block">|</div>
            <div><i class="bi bi-moon text-dark me-1"></i> 5:30-8:30</div>
        </div>
    </div>

    <!-- Ticket Selection Form -->
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form id="ticketPurchaseForm">
                <!-- Breakfast Tickets -->
                <div class="mb-4">
                    <div class="card border-success mb-3">
                        <div class="card-header text-white py-3" style="background-color: #2e7d32;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-sun fs-4 me-2"></i>
                                <h5 class="mb-0">تذاكر الإفطار</h5>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <div class="text-center mb-3">
                                <span class="h4 text-success">7 ريال</span>
                                <span class="text-muted">/ تذكرة</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('breakfastQty', -1)">-</button>
                                <input type="number" class="form-control form-control-lg text-center" style="max-width: 120px" min="0" value="0" id="breakfastQty">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('breakfastQty', 1)">+</button>
                            </div>
                            <div class="text-center mt-3">
                                <span class="text-muted">المجموع: </span>
                                <span class="h5 mb-0" id="breakfastTotal">0 ريال</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lunch Tickets -->
                <div class="mb-4">
                    <div class="card border-success mb-3">
                        <div class="card-header text-white py-3" style="background-color: #1b5e20;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-brightness-high fs-4 me-2"></i>
                                <h5 class="mb-0">تذاكر الغداء</h5>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <div class="text-center mb-3">
                                <span class="h4 text-success">10 ريال</span>
                                <span class="text-muted">/ تذكرة</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('lunchQty', -1)">-</button>
                                <input type="number" class="form-control form-control-lg text-center" style="max-width: 120px" min="0" value="0" id="lunchQty">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('lunchQty', 1)">+</button>
                            </div>
                            <div class="text-center mt-3">
                                <span class="text-muted">المجموع: </span>
                                <span class="h5 mb-0" id="lunchTotal">0 ريال</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dinner Tickets -->
                <div class="mb-4">
                    <div class="card border-success mb-3">
                        <div class="card-header text-white py-3" style="background-color: #004d40;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-moon fs-4 me-2"></i>
                                <h5 class="mb-0">تذاكر العشاء</h5>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <div class="text-center mb-3">
                                <span class="h4 text-success">10 ريال</span>
                                <span class="text-muted">/ تذكرة</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('dinnerQty', -1)">-</button>
                                <input type="number" class="form-control form-control-lg text-center" style="max-width: 120px" min="0" value="0" id="dinnerQty">
                                <button type="button" class="btn btn-outline-success btn-lg fw-bold" onclick="adjustQuantity('dinnerQty', 1)">+</button>
                            </div>
                            <div class="text-center mt-3">
                                <span class="text-muted">المجموع: </span>
                                <span class="h5 mb-0" id="dinnerTotal">0 ريال</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="card bg-light">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">المبلغ الإجمالي</h5>
                            <h3 class="mb-0" id="grandTotal">0 ريال</h3>
                        </div>

                        <!-- Pay Button -->
                        <button type="button" class="btn btn-success btn-lg w-100 py-3" id="paypal-button">شراء</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function adjustQuantity(inputId, change) {
        const input = document.getElementById(inputId);
        const newValue = Math.max(0, parseInt(input.value) + change);
        input.value = newValue;
        calculateTotals();
    }

    function calculateTotals() {
        const breakfast = parseInt(document.getElementById('breakfastQty').value) * 7;
        const lunch = parseInt(document.getElementById('lunchQty').value) * 10;
        const dinner = parseInt(document.getElementById('dinnerQty').value) * 10;

        document.getElementById('breakfastTotal').textContent = `${breakfast} ريال`;
        document.getElementById('lunchTotal').textContent = `${lunch} ريال`;
        document.getElementById('dinnerTotal').textContent = `${dinner} ريال`;
        document.getElementById('grandTotal').textContent = `${breakfast + lunch + dinner} ريال`;
    }

    // Initialize calculations
    calculateTotals();
</script>
