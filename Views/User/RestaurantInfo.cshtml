@model KauRestaurant.Models.Restaurant
@{
    ViewData["Title"] = "معلومات المطعم";
}

<div class="container-fluid py-4 py-lg-5 bg-white">
    <div class="container">
        <!-- Restaurant Info Card -->
        <div class="card border-0 shadow">
            <div class="card-header bg-white py-3">
                <h3 class="fw-bold mb-0 text-center">معلومات المطعم</h3>
            </div>

            <div class="card-body p-0">
                <!-- Restaurant Details -->
                <div class="p-4">
                    <div class="row">
                        <!-- Right Column -->
                        <div class="col-md-6 mb-4">
                            <div class="d-flex gap-2">
                                <h4 class="fw-bold mb-3">صورة المطعم</h4>
                                <!-- Restaurant status -->
                                <div>
                                    <span class="badge @(Model.IsOpen ? "bg-success" : "bg-danger") p-2">
                                        @(Model.IsOpen ? "مفتوح الآن" : "مغلق الآن")
                                    </span>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Photo))
                            {
                                <div class="mb-3">
                                    <img src="@Model.Photo" alt="صورة المطعم" class="img-fluid rounded" />
                                </div>
                            }

                            <!-- Working Days & Hours -->
                            <div class="mb-4">
                                <h4 class="fw-bold mb-3">أوقات العمل والوجبات</h4>
                                <div class="mb-3">
                                    <h6 class="mb-2"><i class="bi bi-calendar-week text-success me-2"></i>أيام العمل:</h6>
                                    <p class="ms-4 mb-0">@Model.WorkingDays</p>
                                </div>
                                <div>
                                    <h6 class="mb-3"><i class="bi bi-clock text-success me-2"></i>ساعات العمل:</h6>
                                    <div class="ms-4 mb-3">
                                        <div class="mb-2">الإفطار @Model.BreakfastHours</div>
                                        <div class="mb-2">الغداء @Model.LunchHours</div>
                                    </div>
                                </div>
                            </div>                          
                        </div>

                        <!-- Left Column -->
                        <div class="col-md-6 mb-4">

                            <!-- Google Map Link -->
                            <h4 class="fw-bold mb-3">الموقع</h4>
                            <div class="ratio ratio-16x9 rounded overflow-hidden mb-3">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3712.3280451830014!2d39.24661869999999!3d21.494867!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x15c3cddb3dbfc34f%3A0x393b0cfe3da17b97!2sUniversity&#39;s%20Restaurant!5e0!3m2!1sen!2ssa!4v1745229893533!5m2!1sen!2ssa" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>
                            <a href="@Model.GoogleMapsLink" class="btn btn-sm btn-outline-success mb-3" target="_blank"><i class="bi bi-geo-alt me-1"></i>رابط الموقع</a>

                            <!-- Contact Info -->
                            <h4 class="fw-bold mb-3">معلومات الاتصال</h4>
                            <div class="mb-3">
                                <h6 class="mb-2"><i class="bi bi-geo-alt-fill text-success me-2"></i>العنوان:</h6>
                                <p class="ms-4 mb-0">@Model.Location</p>
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <h6 class="mb-2"><i class="bi bi-envelope-fill text-success me-2"></i>البريد الإلكتروني:</h6>
                                    <p class="ms-4 mb-0">@Model.Email</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6 class="mb-2"><i class="bi bi-telephone-fill text-success me-2"></i>رقم الاتصال:</h6>
                                    <p class="ms-4 mb-0">@Model.ContactNumber</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
