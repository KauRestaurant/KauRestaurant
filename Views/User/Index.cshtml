@model KauRestaurant.Models.Menu
@{
    ViewData["Title"] = "الرئيسية";
}

<div>
    <!-- Welcome Message -->
    <div class="bg-success text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="fw-bold mb-3">مرحبًا بكم في المطعم الجامعي</h1>
                    <p class="lead mb-0">تحقق من قائمة طعام اليوم</p>
                </div>
                <div class="col-md-4 text-md-end mt-4 mt-md-0">
                    <a class="btn btn-outline-light btn-lg" asp-controller="User" asp-action="Purchase">
                        <i class="bi bi-plus-lg me-2"></i>شراء التذاكر
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Section -->
    <div class="container-fluid py-4 py-lg-5 bg-white">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold mb-0">قائمة اليوم - @Model.Day</h3>
                <a asp-controller="User" asp-action="Menu" class="btn btn-success">
                    <i class="bi bi-grid-3x3-gap me-2"></i>قائمة الأسبوع
                </a>
            </div>

            <!-- Meal Times -->
            <div class="alert alert-light border shadow-sm text-center mb-4">
                <div class="row g-2 justify-content-center">
                    <div class="col-auto">
                        <i class="bi bi-sun text-dark me-1"></i>الإفطار: 7:00-10:30
                    </div>
                    <div class="col-auto">|</div>
                    <div class="col-auto">
                        <i class="bi bi-brightness-high text-dark me-1"></i>الغداء: 11:30-2:30
                    </div>
                    <div class="col-auto">|</div>
                    <div class="col-auto">
                        <i class="bi bi-moon text-dark me-1"></i>العشاء: 5:30-8:30
                    </div>
                </div>
            </div>

            <div id="menuContent">
                <div id="today">
                    <div class="row" id="todayMenu">
                        @{
                            var categories = new[] { "الإفطار", "الغداء", "العشاء" };
                            var mealsByCategory = Model.Meals
                            .GroupBy(m => m.MealCategory)
                            .ToDictionary(g => g.Key, g => g.ToList());

                            foreach (var category in categories)
                            {
                                var meals = mealsByCategory.ContainsKey(category)
                                ? mealsByCategory[category]
                                : new List<KauRestaurant.Models.Meal>();

                                var (icon, bgColor) = category switch
                                {
                                    "الإفطار" => ("bi-sun", "#2e7d32"),
                                    "الغداء" => ("bi-brightness-high", "#1b5e20"),
                                    "العشاء" => ("bi-moon", "#004d40"),
                                    _ => ("bi-question", "#6c757d")
                                };

                                <div class="col-12 col-md-4 mb-3">
                                    <div class="accordion-desktop">
                                        <div class="border-0 rounded shadow h-100">
                                            <h2>
                                                <button class="accordion-button collapsed text-white rounded-top"
                                                        style="background-color: @bgColor;"
                                                        type="button"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#today@(category)">
                                                    <i class="bi @icon me-2"></i>@category
                                                </button>
                                            </h2>
                                            <div id="today@(category)" class="accordion-collapse collapse">
                                                <div class="accordion-body p-4">
                                                    @if (meals.Any())
                                                    {
                                                        var mealsByType = meals.GroupBy(m => m.MealType);
                                                        foreach (var typeGroup in mealsByType)
                                                        {
                                                            <div class="mb-4">
                                                                <div class="d-flex align-items-center border-bottom pb-2 mb-3">
                                                                    <span class="badge bg-success">@typeGroup.Key</span>
                                                                </div>
                                                                <div class="list-group list-group-flush">
                                                                    @foreach (var meal in typeGroup)
                                                                    {
                                                                        <a class="list-group-item d-flex justify-content-between align-items-start px-0"
                                                                           asp-controller="User"
                                                                           asp-action="Meal"
                                                                           asp-route-id="@meal.MealID">
                                                                            <div>
                                                                                <strong>@meal.MealName</strong>
                                                                            </div>
                                                                            <span class="badge bg-light text-dark">@meal.Calories سعرة حرارية</span>
                                                                        </a>
                                                                    }
                                                                </div>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-light">
                                                            لا يوجد وجبات مسجلة لهذا اليوم
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>