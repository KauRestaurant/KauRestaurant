@{
    ViewData["Title"] = "قائمة الأسبوع";
}

<div class="bg-success text-white py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">قائمة الأسبوع</h1>
                <p class="lead mb-0">اختر كمية التذاكر الخاصة بك</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a class="btn btn-light btn-lg" asp-controller="User" asp-action="Purchase">
                    <i class="bi bi-plus-lg me-2"></i>شراء التذاكر
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container py-4 py-lg-5">
