@model List<KauRestaurant.Models.Menu>
@using KauRestaurant.Services

@{
    ViewData["Title"] = "قائمة الأسبوع";
    // Use UIConstants instead of defining dictionaries in the view
}

<div>
    <!-- Main Content Section -->
    <div class="container-fluid py-4 py-lg-5 bg-white">
        <div class="container">
            <!-- Card Header -->
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="fw-bold mb-0">قائمة الأسبوع</h3>
                        <div>
                            <a class="btn btn-success" asp-controller="User" asp-action="Purchase">
                                <i class="bi bi-plus-lg me-2"></i>شراء التذاكر
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Week Days -->
                <div class="card-body p-0">
                    <nav>
                        <div class="nav nav-tabs nav-fill border-0" role="tablist">
                            @foreach (var menu in Model)
                            {
                                var isActive = menu == Model.FirstOrDefault() ? "active" : "";
                                <a class="nav-link @isActive py-3 px-2 px-md-3" href="#@menu.Day.ToLower()" data-bs-toggle="tab">@menu.Day</a>
                            }
                        </div>
                    </nav>
                </div>
            </div>

            <!-- Meal Times -->
            <div class="alert alert-light border shadow-sm text-center mb-4">
                <div class="row g-2 justify-content-center">
                    <div class="col-auto">
                        <i class="bi bi-sun text-dark me-1"></i>الإفطار: 7:00-10:30
                    </div>
                    <div class="col-auto">|</div>
                    <div class="col-auto">
                        <i class="bi bi-brightness-high text-dark me-1"></i>الغداء: 11:30-2:30
                    </div>
                    <div class="col-auto">|</div>
                    <div class="col-auto">
                        <i class="bi bi-moon text-dark me-1"></i>العشاء: 5:30-8:30
                    </div>
                </div>
            </div>

            <!-- Menu -->
            <div class="tab-content" id="menuContent">
                @foreach (var menu in Model)
                {
                    var isActive = menu == Model.FirstOrDefault() ? "show active" : "";
                    <div class="tab-pane fade @isActive" id="@menu.Day.ToLower()">
                        <div class="row" id="@(menu.Day.ToLower())Menu">
                            @{
                                // Group meals by category (Breakfast, Lunch, Dinner)
                                var mealsByCategory = menu.Meals?.GroupBy(m => m.MealCategory).ToDictionary(g => g.Key, g => g.ToList());
                                var categories = new[] { "الإفطار", "الغداء", "العشاء" };

                                foreach (var category in categories)
                                {
                                    var meals = mealsByCategory != null && mealsByCategory.ContainsKey(category)
                                    ? mealsByCategory[category]
                                    : new List<KauRestaurant.Models.Meal>();

                                    var (icon, bgColor) = UIConstants.MealCategoryInfo.ContainsKey(category)
                                    ? UIConstants.MealCategoryInfo[category]
                                    : ("bi-question", "#6c757d");

                                    var categoryId = $"{menu.Day.ToLower()}{category}";

                                    <div class="col-12 col-md-4 mb-3">
                                        <div class="accordion accordion-desktop">
                                            <div class="accordion-item border-0 rounded shadow h-100">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed text-white rounded-top"
                                                            style="background-color: @bgColor" type="button"
                                                            data-bs-toggle="collapse" data-bs-target="#@categoryId">
                                                        <i class="bi @icon me-2"></i>@category
                                                    </button>
                                                </h2>
                                                <div id="@categoryId" class="accordion-collapse collapse">
                                                    <div class="accordion-body p-4">
                                                        @if (meals.Any())
                                                        {
                                                            // Group meals by types (Main Course, Side, Dessert, etc.)
                                                            var mealsByType = meals.GroupBy(m => m.MealType)
                                                            .OrderBy(g => g.Key != "الطبق الرئيسي") // Main course first
                                                            .ThenBy(g => g.Key != "طبق جانبي")      // Sides second
                                                            .ToDictionary(g => g.Key, g => g.ToList());

                                                            foreach (var typeGroup in mealsByType)
                                                            {
                                                                <div class="mb-4">
                                                                    <div class="d-flex align-items-center border-bottom pb-2 mb-3">
                                                                        <span class="badge @(UIConstants.MealTypeBadgeColors.ContainsKey(typeGroup.Key) ?
                                                                              UIConstants.MealTypeBadgeColors[typeGroup.Key] : "bg-secondary")">
                                                                            @typeGroup.Key
                                                                        </span>
                                                                    </div>
                                                                    <div class="list-group list-group-flush">
                                                                        @foreach (var meal in typeGroup.Value)
                                                                        {
                                                                            <a class="list-group-item d-flex justify-content-between align-items-start px-0"
                                                                               asp-controller="User"
                                                                               asp-action="Meal"
                                                                               asp-route-id="@meal.MealID">
                                                                                <div>
                                                                                    <strong>@meal.MealName</strong>
                                                                                </div>
                                                                                <span class="badge bg-light text-dark">@meal.Calories سعرة حرارية</span>
                                                                            </a>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <div class="alert alert-light">
                                                                لا يوجد وجبات مسجلة لهذا اليوم
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
