@model IEnumerable<KauRestaurant.Models.FAQ>
@{
    ViewData["Title"] = "الأسئلة الشائعة";
}

<div class="container-fluid py-4 py-lg-5 bg-white">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow">
                    <!-- Page Header Card -->
                    <div class="card-header bg-white py-3">
                        <h2 class="fw-bold mb-0 text-center">الأسئلة الشائعة</h2>
                    </div>
                    <!-- FAQ Accordion -->
                    <div class="card-body p-4">
                        @if (Model != null && Model.Any())
                        {
                            <div class="accordion" id="faqAccordion">
                                @foreach (var faq in Model.OrderBy(f => f.DisplayOrder))
                                {
                                    <div class="accordion-item border-0 mb-3">
                                        <h2 class="accordion-header" id="heading-@faq.FAQID">
                                            <button class="accordion-button collapsed shadow-sm rounded fw-bold"
                                                    type="button"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#collapse-@faq.FAQID"
                                                    aria-expanded="false"
                                                    aria-controls="collapse-@faq.FAQID">
                                                @faq.Question
                                            </button>
                                        </h2>
                                        <div id="collapse-@faq.FAQID"
                                             class="accordion-collapse collapse"
                                             aria-labelledby="heading-@faq.FAQID"
                                             data-bs-parent="#faqAccordion">
                                            <div class="accordion-body bg-white rounded-bottom p-4 mt-1">
                                                @Html.Raw(faq.Answer.Replace("\n", "<br />"))
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>لا توجد أسئلة شائعة متاحة حالياً.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Box -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow">
                    <div class="card-body p-4 text-center">
                        <h5 class="mb-3">لم تجد إجابة لسؤالك؟</h5>
                        <p class="text-muted mb-4">يمكنك التواصل معنا مباشرة عبر نموذج التواصل أو عبر معلومات الاتصال</p>
                        <a asp-area="User" asp-controller="Feedback" asp-action="Index" class="btn btn-success px-4">
                            <i class="bi bi-envelope me-2"></i>تواصل معنا
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>