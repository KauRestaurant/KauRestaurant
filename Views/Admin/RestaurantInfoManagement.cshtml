@model KauRestaurant.Models.Restaurant
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "إدارة معلومات المطعم";
    var currentDay = DateTime.Now.DayOfWeek;

    // Helper function to get day name in Arabic - matching RestaurantInfo.cshtml
    string GetArabicDayName(DayOfWeek day) => day switch
    {
        DayOfWeek.Saturday => "السبت",
        DayOfWeek.Sunday => "الأحد",
        DayOfWeek.Monday => "الاثنين",
        DayOfWeek.Tuesday => "الثلاثاء",
        DayOfWeek.Wednesday => "الأربعاء",
        DayOfWeek.Thursday => "الخميس",
        DayOfWeek.Friday => "الجمعة",
        _ => ""
    };

    // Array of all days for easier iteration - matching RestaurantInfo.cshtml
    var daysOfWeek = new[]
    {
        DayOfWeek.Saturday, DayOfWeek.Sunday, DayOfWeek.Monday,
        DayOfWeek.Tuesday, DayOfWeek.Wednesday, DayOfWeek.Thursday, DayOfWeek.Friday
    };

    // Define meals array outside the loop for consistency
    var meals = new[] {
        ("الفطور", "Breakfast", "bg-breakfast"),
        ("الغداء", "Lunch", "bg-lunch"),
        ("العشاء", "Dinner", "bg-dinner")
    };
}

<!-- Main Content Section -->
<div class="container-fluid py-4 py-lg-5 bg-white">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i> @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card border-0 shadow mb-4">
            <div class="card-header bg-white py-3">
                <h3 class="fw-bold mb-0"><i class="bi bi-shop me-2"></i>إدارة معلومات المطعم</h3>
            </div>
            <div class="card-body p-4">
                <form asp-controller="RestaurantInfoManagement" asp-action="Update" method="post" enctype="multipart/form-data" id="restaurantForm">
                    <input type="hidden" asp-for="RestaurantID" />

                    <div class="row mb-4">
                        <div class="col-lg-6 mb-3">
                            <h5 class="border-bottom pb-2 mb-3">المعلومات الأساسية</h5>

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-bold">اسم المطعم</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">صورة المطعم</label>
                                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                                {
                                    <div class="mb-2">
                                        <img src="@Model.PhotoPath" class="img-thumbnail" alt="صورة المطعم" />
                                    </div>
                                }
                                <input type="file" name="photo" class="form-control" accept="image/*" />
                                <small class="form-text text-muted">اترك هذا الحقل فارغاً للاحتفاظ بالصورة الحالية</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-bold">وصف المطعم</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <h5 class="border-bottom pb-2 mb-3">معلومات الاتصال والعنوان</h5>

                            <div class="mb-3">
                                <label asp-for="Address" class="form-label fw-bold">عنوان المطعم</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LocationUrl" class="form-label fw-bold">رابط الموقع على الخريطة <span class="text-danger">*</span></label>
                                <input asp-for="LocationUrl" class="form-control" />
                                <span asp-validation-for="LocationUrl" class="text-danger"></span>
                                <small class="form-text text-muted">رابط من خرائط جوجل</small>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold">رقم الهاتف</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">البريد الإلكتروني</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 mb-3">
                            <h5 class="border-bottom pb-2 mb-3">أوقات العمل والوجبات</h5>

                            <!-- Day Dropdown Menu and Toggle Button in the same line -->
                            <div class="mb-3">
                                <label class="form-label fw-bold mb-1">اختر اليوم</label>
                                <div class="row align-items-center">
                                    <div class="col-6">
                                        <select id="daySelector" class="form-select">
                                            @foreach (var day in daysOfWeek)
                                            {
                                                string dayId = day.ToString().ToLower();
                                                string dayName = GetArabicDayName(day);
                                                bool isActive = day == currentDay;

                                                <option value="@dayId">@dayName</option>
                                            }
                                        </select>
                                    </div>
                                    <div id="toggleContainer" class="col-6 d-flex justify-content-end">
                                        <!-- Toggle will be inserted here by JS -->
                                    </div>
                                </div>
                            </div>

                            <!-- Day Content Panels -->
                            <div id="dayContentPanels">
                                @foreach (var day in daysOfWeek)
                                {
                                    bool isOpen = Model.IsDayOpen(day);
                                    bool isActive = day == currentDay;
                                    string dayId = day.ToString().ToLower();
                                    string dayName = GetArabicDayName(day);
                                    string dayCode = day.ToString(); // For form field names

                                    <div class="day-panel" id="@dayId-panel" style="display: @(isActive ? "block" : "none")">
                                        <!-- Hidden toggle button that will be moved via JS -->
                                        <div class="toggle-source d-none">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input day-toggle" type="checkbox" role="switch"
                                                       name="Is@(dayCode)Open"
                                                       id="is@(dayCode)Open"
                                                       data-day="@dayCode"
                                                       @(isOpen ? "checked" : "") />
                                                <label class="form-check-label fw-bold" for="is@(dayCode)Open">
                                                    <span class="text-muted">(فتح/إغلاق)</span>
                                                </label>
                                            </div>
                                        </div>

                                        <!-- Meal Time Cards -->
                                        <div class="day-content" data-day="@dayCode">
                                            @foreach (var (mealName, mealCode, bgColor) in meals)
                                            {
                                                bool servesThisMeal = Model.DoesDayServeMeal(day, mealCode);

                                                <div class="card mb-3">
                                                    <div class="card-header text-white @bgColor">
                                                        <div class="form-check">
                                                            <!-- Meal toggle -->
                                                            <input class="form-check-input meal-toggle" type="checkbox"
                                                                   name="@(dayCode)Serves@(mealCode)"
                                                                   id="@(dayCode)Serves@(mealCode)"
                                                                   data-day="@dayCode"
                                                                   data-meal="@mealCode"
                                                                   @(servesThisMeal ? "checked" : "") />
                                                            <label class="form-check-label fw-bold text-white" for="@(dayCode)Serves@(mealCode)">
                                                                @mealName
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="mb-3">
                                                            <label class="form-label">وقت البدء <span class="required-indicator text-danger d-none">*</span></label>
                                                            <!-- Open time -->
                                                            <input name="@(dayCode)@(mealCode)OpenTime"
                                                                   class="form-control @(dayCode.ToLower())-@(mealCode.ToLower())-time"
                                                                   type="time"
                                                                   value="@(Model.GetMealOpenTime(dayCode, mealCode)?.ToString(@"hh\:mm") ?? "")" />
                                                            <div class="text-danger meal-time-error" style="display:none">وقت البدء مطلوب</div>
                                                        </div>
                                                        <div class="mb-0">
                                                            <label class="form-label">وقت الإنتهاء <span class="required-indicator text-danger d-none">*</span></label>
                                                            <!-- Close time -->
                                                            <input name="@(dayCode)@(mealCode)CloseTime"
                                                                   class="form-control @(dayCode.ToLower())-@(mealCode.ToLower())-time"
                                                                   type="time"
                                                                   value="@(Model.GetMealCloseTime(dayCode, mealCode)?.ToString(@"hh\:mm") ?? "")" />
                                                            <div class="text-danger meal-time-error" style="display:none">وقت الإنتهاء مطلوب</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-3 border-top">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-success">
                            <i class="bi bi-arrow-right me-1"></i>
                            <span class="d-none d-md-inline">عودة إلى لوحة التحكم</span>
                            <span class="d-inline d-md-none">العودة</span>
                        </a>
                        <button type="submit" class="btn btn-success px-3">
                            <i class="bi bi-save me-2"></i>
                            <span class="d-none d-md-inline">حفظ المعلومات</span>
                            <span class="d-inline d-md-none">حفظ</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/restaurantInfoManagement.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
