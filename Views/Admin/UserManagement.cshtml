@model List<KauRestaurant.Controllers.Admin.UserViewModel>
@{
    ViewData["Title"] = "إدارة المشرفين";
}

<!-- Main Content Section -->
<div class="container-fluid py-4 py-lg-5 bg-white">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Add New Admin Card -->
        <div class="card border-0 shadow mb-4">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="fw-bold mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>إضافة مشرف جديد
                        <small class="text-muted fs-6 fw-normal">(مستويات الصلاحية A1, A2, A3)</small>
                    </h3>
                </div>
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-4">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>ملاحظة:</strong> مستويات الصلاحية:
                    <ul class="mb-0 mt-2">
                        <li>A1 - مشرف رئيسي (كافة الصلاحيات)</li>
                        <li>A2 - مشرف إداري (إدارة المحتوى والقوائم)</li>
                        <li>A3 - مشرف مساعد (مراجعة التقارير والتعليقات)</li>
                    </ul>
                </div>
                <form method="post" asp-action="CreateUser">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">البريد الإلكتروني</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input type="email" name="Email" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">كلمة المرور</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key"></i></span>
                                <input type="password" name="Password" class="form-control" required
                                       minlength="6" placeholder="٦ أحرف على الأقل" />
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">الاسم الأول</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" name="FirstName" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">الاسم الأخير</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" name="LastName" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">مستوى الصلاحية</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                                <select name="Role" class="form-select" required>
                                    <option value="" disabled selected>اختر مستوى الصلاحية</option>
                                    <option value="A1">A1 - مشرف رئيسي</option>
                                    <option value="A2">A2 - مشرف إداري</option>
                                    <option value="A3">A3 - مشرف مساعد</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-plus-circle me-2"></i>إضافة مشرف
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Admins List Card -->
        <div class="card border-0 shadow">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="fw-bold mb-0">
                        <i class="bi bi-people-fill me-2"></i>قائمة المشرفين
                        <small class="text-muted fs-6 fw-normal">(المستخدمين ذوي الصلاحيات الإدارية فقط)</small>
                    </h3>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>الاسم الكامل</th>
                                <th>البريد الإلكتروني</th>
                                <th>مستوى الصلاحية</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        <i class="bi bi-info-circle me-2"></i>لا يوجد مشرفين حالياً
                                    </td>
                                </tr>
                            }
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-person-badge me-2"></i>
                                        @user.FirstName @user.LastName
                                    </td>
                                    <td>
                                        <i class="bi bi-envelope me-2"></i>
                                        @user.Email
                                    </td>
                                    <td>
                                        @{
                                            var (badgeClass, roleText) = user.CurrentRole switch
                                            {
                                                "A1" => ("bg-danger", "مشرف رئيسي"),
                                                "A2" => ("bg-primary", "مشرف إداري"),
                                                "A3" => ("bg-success", "مشرف مساعد"),
                                                _ => ("bg-secondary", user.CurrentRole)
                                            };
                                        }
                                        <span class="badge @badgeClass">
                                            @user.CurrentRole - @roleText
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <form method="post" asp-action="ChangeRole" class="d-inline-flex align-items-center">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <select name="newRole" class="form-select form-select-sm me-2" style="width: auto;">
                                                    <option value="A1" selected="@(user.CurrentRole == "A1")">A1 - مشرف رئيسي</option>
                                                    <option value="A2" selected="@(user.CurrentRole == "A2")">A2 - مشرف إداري</option>
                                                    <option value="A3" selected="@(user.CurrentRole == "A3")">A3 - مشرف مساعد</option>
                                                </select>
                                                <button type="submit" class="btn btn-sm btn-primary"
                                                        data-bs-toggle="tooltip" title="تغيير مستوى الصلاحية">
                                                    <i class="bi bi-check2"></i>
                                                </button>
                                            </form>

                                            <form method="post" asp-action="DeleteUser" class="d-inline"
                                                  onsubmit="return confirm('هل أنت متأكد من حذف هذا المشرف؟ لا يمكن التراجع عن هذا الإجراء.');">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                @(User.Identity.Name == user.Email ? "disabled" : "")
                                                        data-bs-toggle="tooltip"
                                                        title="@(User.Identity.Name == user.Email ? "لا يمكنك حذف حسابك الحالي" : "حذف المشرف")">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Add password strength indicator
            $('input[name="Password"]').on('input', function() {
                var password = $(this).val();
                var strength = 0;

                if (password.length >= 8) strength++;
                if (password.match(/[a-z]/)) strength++;
                if (password.match(/[A-Z]/)) strength++;
                if (password.match(/[0-9]/)) strength++;
                if (password.match(/[^a-zA-Z0-9]/)) strength++;

                var strengthClass = ['danger', 'warning', 'warning', 'success', 'success'][strength - 1] || 'danger';
                var strengthText = ['ضعيف جداً', 'ضعيف', 'متوسط', 'قوي', 'قوي جداً'][strength - 1] || 'ضعيف جداً';

                // Update password strength indicator if it exists, create it if it doesn't
                var indicator = $(this).closest('.input-group').siblings('.password-strength');
                if (indicator.length === 0) {
                    $(this).closest('.input-group').after('<div class="password-strength mt-2"></div>');
                    indicator = $(this).closest('.input-group').siblings('.password-strength');
                }

                if (password.length > 0) {
                    indicator.html(`<div class="progress" style="height: 5px;">
                        <div class="progress-bar bg-${strengthClass}" style="width: ${strength * 20}%"></div>
                    </div>
                    <small class="text-${strengthClass} mt-1 d-block">قوة كلمة المرور: ${strengthText}</small>`);
                } else {
                    indicator.empty();
                }
            });
        });
    </script>
}
