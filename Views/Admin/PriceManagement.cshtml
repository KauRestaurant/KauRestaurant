@model KauRestaurant.Controllers.Admin.TicketPriceViewModel
@{
    ViewData["Title"] = "إدارة أسعار التذاكر";
}

<!-- Main Content Section -->
<div class="container-fluid py-4 py-lg-5 bg-white">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card border-0 shadow">
            <!-- Card Header -->
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="fw-bold mb-0"><i class="bi bi-currency-exchange me-2"></i>إدارة أسعار التذاكر</h3>
                </div>
            </div>

            <!-- Card Body -->
            <div class="card-body p-4">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>ملاحظة:</strong> يمكنك تعديل أسعار التذاكر لكل وجبة. ستنعكس الأسعار الجديدة على جميع التذاكر المباعة بعد التحديث.
                        </div>

                        <form method="post" asp-action="UpdatePrices" novalidate>
                            <div class="row g-4">
                                <!-- Breakfast Ticket Price -->
                                <div class="col-md-6">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body text-center p-4">
                                            <div class="display-1 mb-3">
                                                <i class="bi bi-sun"></i>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-center mb-3">
                                                <h4 class="mb-0">
                                                    <span class="d-none d-xl-inline">تذكرة الإفطار</span>
                                                    <span class="d-inline d-xl-none">الإفطار</span>
                                                </h4>
                                            </div>
                                            <div class="form-floating mb-3 rtl-input">
                                                <input type="number" asp-for="BreakfastPrice" class="form-control"
                                                       step="0.01" placeholder=" "
                                                       value="@Model.BreakfastPrice.ToString("F2")">
                                                <label asp-for="BreakfastPrice">السعر (ريال)</label>
                                            </div>
                                            <span asp-validation-for="BreakfastPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Lunch Ticket Price -->
                                <div class="col-md-6">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body text-center p-4">
                                            <div class="display-1 mb-3">
                                                <i class="bi bi-brightness-high"></i>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-center mb-3">
                                                <h4 class="mb-0">
                                                    <span class="d-none d-xl-inline">تذكرة الغداء</span>
                                                    <span class="d-inline d-xl-none">الغداء</span>
                                                </h4>
                                            </div>

                                            <div class="form-floating mb-3 rtl-input">
                                                <input type="number" asp-for="LunchPrice" class="form-control"
                                                       step="0.01" placeholder=" "
                                                       value="@Model.LunchPrice.ToString("F2")">
                                                <label asp-for="LunchPrice">السعر (ريال)</label>
                                            </div>
                                            <span asp-validation-for="LunchPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between pt-3 border-top mt-4">
                                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-success">
                                    <i class="bi bi-arrow-right me-1"></i>
                                    <span class="d-none d-md-inline">عودة إلى لوحة التحكم</span>
                                    <span class="d-inline d-md-none">العودة</span>
                                </a>
                                <button type="submit" class="btn btn-success px-3">
                                    <i class="bi bi-save me-2"></i>
                                    <span class="d-none d-md-inline">حفظ المعلومات</span>
                                    <span class="d-inline d-md-none">حفظ</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/priceManagement.js" asp-append-version="true"></script>
}
