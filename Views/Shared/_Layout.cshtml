@{
	var currentPath = Context.Request.Path;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - KauRestaurant</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/KauRestaurant.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Oswald:wght@200..700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container py-2">
				<a class="navbar-brand d-flex align-items-center" href="/">
					<img src="~/images/logo.png" alt="University Logo" height="38" class="me-3">
					<span class="fw-bold d-none d-sm-inline">KAU Restaurant</span>
				</a>

				<button class="navbar-toggler border-0 px-2" type="button" data-bs-toggle="collapse"
						data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav mx-auto">
						<li class="nav-item px-1">
							<a class="nav-link @(currentPath == "/" ? "active" : "") rounded px-3 py-2" href="/">
								<i class="bi bi-house-door me-2"></i>Home
							</a>
						</li>
						<li class="nav-item px-1">
							<a class="nav-link @(currentPath == "/Home/Menu" ? "active" : "") rounded px-3 py-2" asp-controller="Home" asp-action="Menu">
								<i class="bi bi-journal-text me-2"></i>Weekly Menu
							</a>
						</li>
						<li class="nav-item px-1">
							<a class="nav-link @(currentPath == "/purchase" ? "active" : "") rounded px-3 py-2" href="/purchase">
								<i class="bi bi-ticket-perforated me-2"></i>Buy Tickets
							</a>
						</li>
						<li class="nav-item px-1">
							<a class="nav-link @(currentPath == "/my-tickets" ? "active" : "") rounded px-3 py-2" href="/my-tickets">
								<i class="bi bi-collection me-2"></i>My Tickets
							</a>
						</li>
					</ul>

					<div class="d-flex gap-2 mt-3 mt-lg-0">
						<a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-success px-3 text-white">
							<i class="bi bi-box-arrow-in-right me-2"></i>Login
						</a>
						<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success px-3 text-white">
							<i class="bi bi-person-plus me-2"></i>Sign Up
						</a>
					</div>
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="pb-5">
		@RenderBody()
	</main>


	<footer class="border-top footer bg-dark text-white py-4 mt-auto">
		<div class="container text-center">
			<p class="mb-0">&copy; 2023 University Restaurant. All rights reserved.</p>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
