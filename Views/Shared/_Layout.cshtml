@using KauRestaurant.Data
@using KauRestaurant.Models
@inject ApplicationDbContext DbContext

@{
	var currentPath = Context.Request.Path;
	string currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
	string currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - مطعم KAU</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/KauRestaurant.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-xl navbar-dark bg-dark">
			<div class="container py-2">
				<a class="navbar-brand d-flex align-items-center" asp-area="User" asp-controller="Home" asp-action="Index">
					<img src="~/images/logo.png" alt="شعار الجامعة" height="38" class="ms-3">
					<span class="fw-bold d-none d-sm-inline ms-1"> المطعم الجامعي</span>
				</a>

				<button class="navbar-toggler border-0 px-2" type="button" data-bs-toggle="collapse"
						data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto">
						<li class="nav-item px-1">
							<a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "") rounded px-3 py-2" asp-area="User" asp-controller="Home" asp-action="Index">
								<i class="bi bi-house-door me-2"></i> الرئيسية
							</a>
						</li>
						<li class="nav-item px-1">
							<a class="nav-link @(currentController == "Menu" && currentAction == "Index" ? "active" : "") rounded px-3 py-2" asp-area="User" asp-controller="Menu" asp-action="Index">
								<i class="bi bi-journal-text me-2"></i> قائمة الأسبوع
							</a>
						</li>
						<li class="nav-item px-1">
							<a class="nav-link @(currentController == "Purchase" && currentAction == "Index" ? "active" : "") rounded px-3 py-2" asp-area="User" asp-controller="Purchase" asp-action="Index">
								<i class="bi bi-ticket-perforated me-2"></i> شراء التذاكر
							</a>
						</li>
						<li class="nav-item px-1">
							<a class="nav-link @(currentController == "Tickets" && currentAction == "Index" ? "active" : "") rounded px-3 py-2" asp-area="User" asp-controller="Tickets" asp-action="Index">
								<i class="bi bi-collection me-2"></i> تذاكري
							</a>
						</li>
					</ul>

					<div class="ms-auto">
						<partial name="_LoginPartial" />
					</div>
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="flex-fill">
		@RenderBody()
	</main>

	<footer class="footer border-top bg-dark text-white py-4 mt-auto">
		<div class="container">
			<div class="row mb-3">
				<div class="col-md-4">
					<h5 class="fw-bold pb-2">مطعم KAU</h5>
					<p class="py-1">
						المطعم الجامعي الرسمي لجامعة الملك عبد العزيز، نقدم وجبات طازجة عالية الجودة للطلاب وأعضاء هيئة التدريس.
					</p>
				</div>
				<div class="col-md-4 mb-3 mb-md-0">
					<h5 class="fw-bold pb-2">روابط مهمة</h5>
					<ul class="list-unstyled mb-0">
						<li class="py-1">
							<a class="text-white text-decoration-none" asp-area="User" asp-controller="RestaurantInfo" asp-action="Index">
								<i class="bi bi-shop me-2"></i>معلومات المطعم
							</a>
						</li>
						<li class="py-1">
							<a class="text-white text-decoration-none" asp-area="User" asp-controller="Footer" asp-action="FAQ">
								<i class="bi bi-question-circle me-2"></i>الأسئلة الشائعة
							</a>
						</li>
						<li class="py-1">
							<a class="text-white text-decoration-none" asp-area="User" asp-controller="Footer" asp-action="Index">
								<i class="bi bi-envelope me-2"></i>تواصل معنا
							</a>
						</li>
						<li class="py-1">
							<a class="text-white text-decoration-none" asp-area="User" asp-controller="Footer" asp-action="Terms">
								<i class="bi bi-shield-check me-2"></i>سياسة الخصوصية
							</a>
						</li>
					</ul>
				</div>
				<div class="col-md-4">
					<h5 class="fw-bold pb-2">تابعنا</h5>
					<div class="d-flex gap-3">
						<a href="https://x.com/kauedu_sa" class="text-white fs-4" target="_blank">
							<i class="bi bi-twitter"></i>
						</a>
						<a href="https://www.instagram.com/kauedu_sa/" class="text-white fs-4" target="_blank">
							<i class="bi bi-instagram"></i>
						</a>
						<a href="https://www.linkedin.com/school/king-abdulaziz-university/posts/?feedView=all" class="text-white fs-4" target="_blank">
							<i class="bi bi-linkedin"></i>
						</a>
					</div>
				</div>
			</div>
			<div class="border-top border-secondary mt-3 pt-2 text-center">
				<p class="mb-0">&copy; 2025 مطعم KAU جميع الحقوق محفوظة.</p>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
