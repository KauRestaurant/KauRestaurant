@{
    var currentPath = Context.Request.Path;
    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - لوحة تحكم المسؤول</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KauRestaurant.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <!-- Sidebar - visible only on md and larger screens -->
        <nav class="sidebar navbar navbar-dark bg-dark d-none d-md-block px-3">
            <div class="d-flex align-items-center my-3">
                <a class="navbar-brand d-flex align-items-center" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <img src="~/images/logo.png" alt="شعار الجامعة" height="38" class="me-2">
                    <span class="fw-bold">المطعم الجامعي</span>
                </a>
            </div>
            <div class="nav flex-column flex-fill list-unstyled" id="adminNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "Dashboard" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i>
                            لوحة التحكم
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "ScanTicket" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="ScanTicket" asp-action="Index">
                            <i class="bi bi-qr-code-scan me-2"></i>
                            مسح التذاكر
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "UserManagement" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="UserManagement" asp-action="Index">
                            <i class="bi bi-people me-2"></i>
                            إدارة المستخدمين
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "MenuManagement" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="MenuManagement" asp-action="Index">
                            <i class="bi bi-journal-text me-2"></i>
                            إدارة قائمة الأسبوع
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "MealManagement" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="MealManagement" asp-action="Index">
                            <i class="bi bi-egg-fried me-2"></i>
                            إدارة الوجبات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "PriceManagement" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="PriceManagement" asp-action="Index">
                            <i class="bi bi-cash me-2"></i>
                            إدارة الأسعار
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "Reports" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="Reports" asp-action="Index">
                            <i class="bi bi-bar-chart me-2"></i>
                            التقارير والإحصائيات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "RestaurantInfoManagement" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="RestaurantInfoManagement" asp-action="Index">
                            <i class="bi bi-shop me-2"></i>
                            إدارة معلومات المطعم
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "FeedbackManagement" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="FeedbackManagement" asp-action="Index">
                            <i class="bi bi-envelope me-2"></i>
                            إدارة رسائل المستخدمين
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "FooterManagement" && currentAction == "Index" ? "active" : "")"
                           asp-area="Admin" asp-controller="FooterManagement" asp-action="Index">
                            <i class="bi bi-layout-text-window-reverse me-2"></i>
                            إدارة تذييل الصفحة
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded px-3 py-2 @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                           asp-area="User" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-eye me-2"></i>
                            معاينة المطعم
                        </a>
                    </li>
                    <li class="nav-item ms-3 mt-2">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link text-white btn btn-success px-3">
                                <i class="bi bi-box-arrow-right me-2"></i>تسجيل خروج
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
             
            <div class="text-center border-top text-white py-4">
                <p class="mb-0">&copy; 2025 مطعم KAU جميع الحقوق محفوظة.</p>
            </div>
        </nav>

        <!-- Mobile Navigation -->
        <nav class="navbar navbar-expand-md navbar-dark bg-dark d-md-none">
            <div class="container py-2">
                <a class="navbar-brand d-flex align-items-center" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <img src="~/images/logo.png" alt="شعار الجامعة" height="38" class="ms-3">
                    <span class="fw-bold d-none d-sm-inline ms-1">المطعم الجامعي</span>
                </a>

                <button class="navbar-toggler border-0 px-2" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "Dashboard" && currentAction == "Index" ? "active" : "") rounded px-3 py-2"
                               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2 me-2"></i>
                                لوحة التحكم
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "ScanTicket" && currentAction == "Index" ? "active" : "") rounded px-3 py-2"
                               asp-area="Admin" asp-controller="ScanTicket" asp-action="Index">
                                <i class="bi bi-qr-code-scan me-2"></i>
                                مسح التذاكر
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "UserManagement" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="UserManagement" asp-action="Index">
                                <i class="bi bi-people me-2"></i>
                                إدارة المستخدمين
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "MenuManagement" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="MenuManagement" asp-action="Index">
                                <i class="bi bi-journal-text me-2"></i>
                                إدارة قائمة الأسبوع
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "MealManagement" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="MealManagement" asp-action="Index">
                                <i class="bi bi-egg-fried me-2"></i>
                                إدارة الوجبات
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link rounded px-3 py-2 @(currentController == "PriceManagement" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="PriceManagement" asp-action="Index">
                                <i class="bi bi-cash me-2"></i>
                                إدارة الأسعار
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "Reports" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-bar-chart me-2"></i>
                                التقارير والإحصائيات
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "RestaurantInfoManagement" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="RestaurantInfoManagement" asp-action="Index">
                                <i class="bi bi-shop me-2"></i>
                                إدارة معلومات المطعم
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link @(currentController == "FeedbackManagement" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="FeedbackManagement" asp-action="Index">
                                <i class="bi bi-envelope me-2"></i>
                                إدارة رسائل المستخدمين
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link rounded px-3 py-2 @(currentController == "FooterManagement" && currentAction == "Index" ? "active" : "")"
                               asp-area="Admin" asp-controller="FooterManagement" asp-action="Index">
                                <i class="bi bi-layout-text-window-reverse me-2"></i>
                                إدارة تذييل الصفحة
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link rounded px-3 py-2 @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                               asp-area="User" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-eye me-2"></i>
                                معاينة المطعم
                            </a>
                        </li>
                        <li class="nav-item px-1 ms-3 mt-2">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-white btn btn-success px-3">
                                    <i class="bi bi-box-arrow-right me-2"></i>تسجيل خروج
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="main-content">
        <div class="flex-fill">
            @RenderBody()
        </div>
    </div>

    <footer class="footer border-top bg-dark text-white py-4 mt-auto d-md-none">
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 مطعم KAU جميع الحقوق محفوظة.</p>
        </div>
    </footer>

    <!-- Scripts section remains unchanged -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
